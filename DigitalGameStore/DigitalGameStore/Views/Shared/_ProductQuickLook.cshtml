@model Product
@using System.Text.RegularExpressions

<style>
    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        margin: auto;
        text-align: center;
        font-family: arial;
        width:100%;
        height:100%;
        
    }

    .price {
        color: grey;
        font-size: 10%;
    }

    .card button {
        border: none;
        outline: 0;
        padding: 12%;
        color: white;
        background-color: #000;
        text-align: center;
        cursor: pointer;
        width: 100%;
        font-size: 18px;
    }

    .card button:hover {
        opacity: 0.7;
    }
    #addToCart {
        bottom: 0;
    }

</style>

<div class="card">
    <img src="@Url.Content(Model.ProductImgUrl)" alt="Img" style="width:100%">
    <h1>@Model.ProductName</h1>
    <p class="price">@Model.ProductPrice</p>
    <p>@Regex.Replace(@Model.ProductDescription, "(?<=^.{100}).*", "...")</p>
    <p><button asp-action="AddToCart" id="addToCart">Dodaj u košaricu</button></p>
</div>